pipeline{
    agent any
    stages{
        stage("checkpout"){
            steps{
                sh "git clone https://github.com/hothaifa96/jenkins-api-demo"
            }
        }
         stage("build the code"){
            agent{
                docker{
                    image 'python'
                }
            }
            steps{
                sh "python3 main.py"
            }
        }
        
    }
}