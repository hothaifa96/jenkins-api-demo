pipeline{
    agent any
    stages{
        stage("checkout"){
            steps{
                sh "rm -fr jenkins-api-demo"
                sh "git clone https://github.com/hothaifa96/jenkins-api-demo"
            }
        }
        // test if the code is running 
         stage("build & unitest"){ 
            agent{
                docker{
                    image 'python'
                }
            }
                    steps{
                        sh "pip3 install -r requirements.txt"
                        sh "python3 main.py &"
                        retry(3){
                            timeout(time:3 , unit:"SECONDS"){
                                sh 'curl "http://127.0.0.1:5005/api/convert?from=EUR&to=GBP&amount=250"'  
                            }
                        }
                    }
                
            
            
        }
        stage("build docker image"){
            steps{
                sh 'docker build -t forex:v.{env.BUILD_NUMBER} .'
                sh 'docker ps'
            }
        }
        
    }
}