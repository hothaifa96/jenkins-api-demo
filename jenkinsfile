pipeline{
    agent any
    environment {
        DOCKER_IMAGE = "forex-app"
        DOCKER_TAG = "v.${env.BUILD_NUMBER}"
        GIT_REPO = "https://github.com/hothaifa96/jenkins-api-demo"
        WORK_SPACE = "jenkins-api-demo"
        TEST_CONTIANER_NAME = "app"

        AWS_ACCOUNT_ID = "514080426196"
        AWS_REGOIN = "us-east-1"
        ECR_REPO = "forex-app"
        ECR_URL = "${env.AWS_ACCOUNT_ID}.dkr.ecr.${env.AWS_REGOIN}.amazonaws.com"

        AWS_CRED_ID = "ecr-cred"

    }
    stages{
        stage("checkout"){
            steps{
                sh "rm -fr ${env.WORK_SPACE}"
                sh "git clone ${env.GIT_REPO}"
            }
        }
        // test if the code is running 
         stage("build & unitest"){ 
            agent{
                docker{
                    image 'python'
                }
            }
                    steps{
                        sh "pip3 install -r requirements.txt"
                        sh "python3 main.py &"
                        retry(3){
                            timeout(time:3 , unit:"SECONDS"){
                                sh 'curl "http://127.0.0.1:5005/api/convert?from=EUR&to=GBP&amount=250"'  
                            }
                        }
                    }
                
            
            
        }
        stage("build docker image"){
            steps{
                sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                sh 'docker images'
            }
        }
        stage ("prepare test env"){
            steps{
                sh "docker run --name ${env.TEST_CONTIANER_NAME} -p 5005:5005 -d ${env.DOCKER_IMAGE}:${env.DOCKER_TAG} "
                sh "sleep 3" 
                sh "docker ps "
            }
        }
        stage ("Test"){   
            parallel {
                stage("component test"){
                    steps{
                        sh 'docker ps'
                        sh "curl http://${env.TEST_CONTIANER_NAME}:5005/api/convert?from=USD&to=ILS&amount=100"

                    }
                }
                stage("integration test"){
                    steps{   
                        // docker compose up                
                        sh "curl http://${env.TEST_CONTIANER_NAME}:5005/api/convert?from=USD&to=ILS&amount=100"
                    }
                }
            }
        post{
            always{
                sh "docker rm -f ${env.TEST_CONTIANER_NAME}"
            }
           
        }
        }
        stage ("push image to ECR"){
            steps{
                withCredentials([[ $class: 'AmazonWebServicesCredentialsBinding', credentialsId: "${env.AWS_CRED_ID}"]]){
                    sh "aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin  ${env.ECR_URL}"
                    sh "docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${env.ECR_URL}/${env.ECR_REPO}:latest"
                    sh "docker push ${env.ECR_URL}/${env.ECR_REPO}:latest"
                 }
            }
        }
        
        
    }
}