pipeline{
    agent any
    environment {
        DOCKER_IMAGE = "forex-app"
        DOCKER_TAG = "v.${env.BUILD_NUMBER}"
        GIT_REPO = "https://github.com/hothaifa96/jenkins-api-demo"
        WORK_SPACE = "jenkins-api-demo"
    }
    stages{
        stage("checkout"){
            steps{
                sh "rm -fr ${env.WORK_SPACE}"
                sh "git clone ${env.GIT_REPO}"
            }
        }
        // test if the code is running 
         stage("build & unitest"){ 
            agent{
                docker{
                    image 'python'
                }
            }
                    steps{
                        sh "pip3 install -r requirements.txt"
                        sh "python3 main.py &"
                        retry(3){
                            timeout(time:3 , unit:"SECONDS"){
                                sh 'curl "http://127.0.0.1:5005/api/convert?from=EUR&to=GBP&amount=250"'  
                            }
                        }
                    }
                
            
            
        }
        stage("build docker image"){
            steps{
                sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                sh 'docker images'
            }
        }
        
    }
}